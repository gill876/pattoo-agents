[Unit]
Description=pattoo_agent_os_autonomousd daemon
Wants=network.target
After=network.target

[Service]
Environment="PATTOO_CONFIGDIR=x"
RuntimeDirectoryPreserve=yes
RuntimeDirectory=PATTOO_SYSTEM_DAEMON_DIRECTORY
User=pattoo
Group=pattoo
ExecStart=
ExecStart=INSTALLATION_DIRECTORY/bin/pattoo_agent_os_autonomousd.py --start
ExecStop=INSTALLATION_DIRECTORY/bin/pattoo_agent_os_autonomousd.py --stop
ExecReload=INSTALLATION_DIRECTORY/bin/pattoo_agent_os_autonomousd.py --restart
RemainAfterExit=yes
GuessMainPID=yes
Type=forking

[Install]
WantedBy=multi-user.target
